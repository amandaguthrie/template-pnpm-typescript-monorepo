{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/build",
			"!**/dist",
			"!**/node_modules",
			"!**/*.md",
			"!**/pnpm-lock.yaml",
			"!**/.svelte-kit",
			"!**/*.*svelte*",
			"!**/package.json"
		]
	},
	"formatter": {
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"bracketSpacing": true,
			"enabled": true,
			"jsxQuoteStyle": "double",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 2
		},
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": {
					"level": "error"
				}
			},
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
