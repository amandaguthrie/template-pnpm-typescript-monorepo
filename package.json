{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "monorepo-template-ts-pnpm",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "private": "true",
  "author": {
    "name": "Amanda Guthrie",
    "url": "https://github.com/amandaguthrie"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amandaguthrie/template-pnpm-typescript-monorepo.git"
  },
  "scripts": {
    "build-fast": "pnpm -r --parallel --filter=./packages/** build-fast",
    "build": "pnpm -r --filter=./packages/** build",
    "reset": "pnpm -r --parallel exec rimraf node_modules dist && rimraf node_modules dist",
    "format": "pnpm biome lint packages",
    "format:fix": "pnpm biome check --write packages",
    "test": "pnpm -r --parallel --filter=./packages/** test --if-present",
    "typecheck": "tsc --noEmit",
    "release": "changeset publish",
    "release:dev:version": "changeset version --snapshot dev",
    "release:dev:publish": "changeset publish --no-git-tag --tag dev"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@types/node": "25.0.3",
    "glob": "13.0.0",
    "publint": "0.3.16",
    "rimraf": "6.1.2",
    "tsdown": "0.18.3",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": "24.x || 25.x",
    "pnpm": "^10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
